    <RootNamespace>mirrord_test</RootNamespace>
    <ContainerImageName>bayraktarahmetenes/mirrord-test</ContainerImageName>
    <ContainerRuntimeIdentifier>linux-x64</ContainerRuntimeIdentifier>
